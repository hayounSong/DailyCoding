<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="3">

        <ImageButton
            android:id="@+id/btn_dailycoding"
            android:layout_width="320dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/dailycoding_img"
            android:text="Daily Coding" />


        <ImageButton
            android:id="@+id/btn_quiz"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/quiz_img"
            android:text="Quiz" />

        <ImageButton
            android:id="@+id/btn_studiovideo"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#008F4343"
            android:scaleType="fitXY"
            android:src="@drawable/studyvideo_img"
            android:text="Study Video" />


        <ImageButton
            android:id="@+id/btn_leveltest"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:background="#00C45454"
            android:scaleType="fitXY"
            android:src="@drawable/leveltest_img"
            android:text="Level Test" />

        <ImageButton
            android:id="@+id/btn_community"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="#00914848"
            android:scaleType="fitXY"
            android:src="@drawable/community_img"
            android:text="Community" />

    </GridLayout>

    <ImageButton
        android:id="@+id/btn_check"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:background="#006F1C1C"
        android:scaleType="fitXY"
        android:src="@drawable/check_img"
        android:text="정답률 확인" />


</LinearLayout>