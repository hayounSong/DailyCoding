<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Q U I Z *"
        android:textSize="30dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/quiz7"
        android:layout_marginBottom="50dp"
        tools:srcCompat="@drawable/quiz7" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/answer7_1"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:backgroundTint="#19000000"
            android:scaleType="fitCenter"
            android:src="@drawable/answer1" />

        <ImageButton
            android:id="@+id/answer7_2"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:backgroundTint="#19000000"
            android:scaleType="fitCenter"
            android:src="@drawable/answer2"
            android:text="answer2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/answer7_3"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:backgroundTint="#19000000"
            android:scaleType="fitCenter"
            android:src="@drawable/answer3"
            android:text="answer3" />

        <ImageButton
            android:id="@+id/answer7_4"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:backgroundTint="#19000000"
            android:scaleType="fitCenter"
            android:src="@drawable/answer4"
            android:text="answer4" />
    </LinearLayout>


</LinearLayout>